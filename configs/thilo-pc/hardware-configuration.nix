    { device = "/dev/disk/by-uuid/DADB-44A9";
      fsType = "vfat";
      options = [ "fmask=0077" "dmask=0077" ];
    };

  fileSystems = {
    "/data" = {
      device = "/dev/disk/by-uuid/a13a2cfa-12af-463d-ae5c-d46c881fcdd6";
      fsType = "btrfs";
      options = [ "nofail" ];
